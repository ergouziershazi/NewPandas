<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="邮箱注册需要激活后才能登陆"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_edit_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="账号：请输入邮箱"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@drawable/edit_bg"
        android:textColor="@color/black"
        android:textCursorDrawable="@null" />


    <TextView
        android:id="@+id/email_check_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/red" />



    <EditText
        android:id="@+id/email_edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入密码"
        android:padding="8dp"
        android:textSize="16sp"
        android:background="@drawable/edit_bg"
        android:textColor="@color/black"
        android:textCursorDrawable="@null" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/red"
        android:id="@+id/email_check_pwd"
        android:layout_marginLeft="20dp" />


        <EditText
            android:id="@+id/email_edit_surepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="请确认密码"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/edit_bg"
            android:textColor="@color/black"
            android:textCursorDrawable="@null" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/red"
        android:id="@+id/email_check_surepwd"
        android:layout_marginLeft="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/email_edit_imgcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/forget_imgcode"
            android:background="@drawable/edit_bg"
            android:hint="@string/forget_img_yanzhengma_hint"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/email_imgcode"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
             />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        >

        <CheckBox
            android:id="@+id/email_pact_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:background="@drawable/selector_check"
            android:button="@null"
            android:checked="true" />
        <TextView
            android:id="@+id/email_pact_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
    <Button
        android:layout_margin="20dp"
        android:id="@+id/email_register"
        android:background="@drawable/img_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"/>
</LinearLayout>